<form action="/tarefas/insert" method="POST" class="form" id="myForm">
    <h1>Adicionar tarefa concluída</h1>
    <div class="especial">
        
        <label for="title" class="label-title">Titulo</label>
        <input type="text" name="title" placeholder="Digite o título">
    </div>
    <div class="form-control">
        <label for="description">Descreva tarefa:</label>
        <textarea name="description" placeholder="Matéria, professor data etc."></textarea>
    </div>
    <div class="result"></div>

    <input type="submit" value="Cadastrar" class="botoes">
</form>


<script src="/js/check.js"></script>